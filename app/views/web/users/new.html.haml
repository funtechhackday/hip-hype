.registration-form
  .row.justify-content-md-center
    .col-md-6
      .card
        .card-block
          .sign-in_form
            %h1
              = t('.registration')
            = simple_form_for @user, url: users_path(params.extract!(:from).permit!) do |f|
              .row
                .col-md-6
                  = f.input :email
                  = f.input :first_name
                  = f.input :last_name
                  = f.input :password
                  = f.submit t('.submit'), class: "btn btn-secondary"
            %br
            %h3
              = t('.sign_in_via_socials')
            %ul.list-inline
              %li.list-inline-item
                = link_to sign_in_via_social_network_cpath(:vkontakte), class: 'nav-link hype-icon-black' do
                  %span.fa.fa-vk.fa-2x
              %li.list-inline-item
                = link_to sign_in_via_social_network_cpath(:facebook), class: 'nav-link hype-icon-black' do
                  %span.fa.fa-facebook.fa-2x
