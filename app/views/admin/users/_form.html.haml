= simple_form_for @user, url: url, html: {method: method } do |f|
  .row
    .col-md-6
      = f.input :first_name
      = f.input :last_name
      %label.string.optional.control-label
        = t('.avatar')
      = f.attachment_field :avatar
      %br
      %br
  .form-actions
    = f.button :submit, class: 'btn btn-secondary'
